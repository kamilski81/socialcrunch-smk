-#Set title
#header
  %h1
    = site_name
    %br
    Leader Board

#content
  #mostshagged.statlist
    %h2
      = "Most #{Constants::BANG.titleize}ed"
    -# @nathantodo: these should be displaying inline-block
    %ul
      - @most_shagged.each do |question|
        %li
          - if question.image
            %img{src: "#{question.image}"}
          %span
            = "#{question.name} / #{question.description}"
            = question.stat.shag_count
    %h2 Most Married
    %ul
      %li
        - @most_married.each do |question|
          %li
            - if question.image
              %img{src: "#{question.image}"}
            %span
              = "#{question.name} / #{question.description}"
              = question.stat.marry_count
    %h2
      = "Most #{Constants::KILL.titleize}ed"
    %ul
      %li
        - @most_killed.each do |question|
          %li
            - if question.image
              %img{src: "#{question.image}"}
            %span
              = "#{question.name} / #{question.description}"
              = question.stat.kill_count
